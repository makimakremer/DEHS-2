{
  "kind": "collectionType",
  "collectionName": "herstellers",
  "info": {
    "singularName": "hersteller",
    "pluralName": "herstellers",
    "displayName": "Hersteller",
    "description": "Hersteller von Heizungsprodukten"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "beschreibung": {
      "type": "richtext"
    },
    "website": {
      "type": "string",
      "maxLength": 255
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "aktiv": {
      "type": "boolean",
      "default": true
    },
    "produkte": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "hersteller"
    }
  }
}
