{
  "kind": "collectionType",
  "collectionName": "kategorien",
  "info": {
    "singularName": "kategorie",
    "pluralName": "kategorien",
    "displayName": "Kategorie",
    "description": "Produktkategorien für den Heizungsgroßhandel"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "beschreibung": {
      "type": "richtext"
    },
    "icon": {
      "type": "string",
      "maxLength": 50
    },
    "bild": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "sortierung": {
      "type": "integer",
      "default": 0
    },
    "aktiv": {
      "type": "boolean",
      "default": true
    },
    "inNavigation": {
      "type": "boolean",
      "default": true
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::kategorie.kategorie",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kategorie.kategorie",
      "mappedBy": "parent"
    },
    "produkte": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "kategorie"
    }
  }
}
